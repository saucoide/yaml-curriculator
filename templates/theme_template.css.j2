/* Print optimization */
@media print {
    html {
        background: none !important;
        height: auto;
        width: 100%;
    }
    
    body {
        background: transparent !important;
        color: var(--primary-color);
        margin: 0;
        padding: 0;
    }

    body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to right, {{ sidebar_bg }} 28%, {{ bg_color }} 28%) !important;
        z-index: -1;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
    }

    .page {
        margin: 0;
        border: initial;
        width: 100%;
        box-shadow: none;
        background: transparent;
    }
    
    @page {
        margin: 0;
        size: A4;
    }
}
